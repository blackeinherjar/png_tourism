<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_item_spot_visited_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/list_item_spot_title_text_view"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_spot_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_enter"
        android:layout_alignBottom="@+id/button_enter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Spot Name"/>

    <Button
        android:id="@+id/button_enter"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/list_item_spot_visited_check_box"
        android:layout_toStartOf="@+id/list_item_spot_visited_check_box"
        android:text="@string/enter_button"
        tools:text="Enter"/>


</RelativeLayout>