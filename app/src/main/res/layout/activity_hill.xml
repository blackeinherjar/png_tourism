<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".HillActivity"  >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/textview"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="@string/spot_name_1"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:contentDescription="@string/spot_name_1"
        app:srcCompat="@mipmap/ic_launcher_foreground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:text="Penang Hill is one of the best Place to be visited.There are many attractions available there:- \n -Flora \n -Fauna \n -Viewing Deck \n -Love Lock \n -Historical Heritage"/>

</LinearLayout>